<Page x:Class="MunicipalService.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MunicipalService"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Municipal Services" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="Report Issues" Width="200" Height="40" Margin="0,10" Click="ReportIssues_Click"/>
            <Button Content="Local Events and Announcements" Width="200" Height="40" Margin="0,10" IsEnabled="False"/>
            <Button Content="Service Request Status" Width="200" Height="40" Margin="0,10" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Page>
